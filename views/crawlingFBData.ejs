<%- include("head") %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("sidebar") %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include("navbar") %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Choose the post</h1>
                                </div>
                                <form class="user" method="post" action="/crawling/crawl-data">
                                    <div class="form-group row">
                                        <div class="col-sm-12 mb-12 mb-sm-0">
                                            <select class=" form-control" name="postID">
                                                <% if (listPost) { for ( var i = 0; i < listPost.length; i++ ) { %>
                                                    <option value="<%= listPost[i].postID %>"><%= listPost[i].postID %></option>
                                                    <% }} %>
                                            </select>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Show data
                                    </button>
                                    <hr>
                                </form>
                                <hr>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>Url</th>
                                            <th>Name</th>
                                            <th>Gender</th>
                                            <th>Birthday</th>
                                            <th>HomeTown</th>
                                            <th>Current Town</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (list) { for ( let item of list ) { %>
                                        <tr>
                                            <td><%= item.url %></td>
                                            <td><%= item.name %></td>
                                            <td><%= item.gender %></td>
                                            <td><%= item.birthday %></td>
                                            <td><%= item.homeTown %></td>
                                            <td><%= item.currentTown %></td>
                                        </tr>
                                        <% }} %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; @Eagle2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <%- include("scrolltotop") %>
    <!-- Scroll to Top Button-->

    <%- include("injectjs") %>
</body>

</html>