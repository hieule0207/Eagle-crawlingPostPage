<%- include("head") %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("sidebar") %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include("navbar") %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Product list</h1>
                                </div>
                                <hr>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="container-fluid">
                            <h1 class="h3 mb-2 text-gray-800">Result</h1>
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Data report</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Mã SP</th>
                                                    <th>Tên SP</th>
                                                    <th>Loại SP</th>
                                                    <th>Avatar</th>
                                                    <th>Số lượng tồn kho</th>
                                                    <th>Giá tiền bán</th>
                                                    <th>Trạng thái SP</th>
                                                    <th>Thao tác</th>
                                                </tr>
                                            </thead>
                                            <!-- <tfoot>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Position</th>
                                                    <th>Office</th>
                                                    <th>Age</th>
                                                    <th>Start date</th>
                                                    <th>Salary</th>
                                                </tr>
                                            </tfoot> -->
                                            <tbody>
                                                <% if (list) { for( let item of list ) { %>
                                                <tr>
                                                    <td><%= item.maSP %></td>
                                                    <td><%= item.tenSP %></td>
                                                    <td><%= item.loaiSP %></td>
                                                    <td>
                                                        <% if (item.anhDaiDien == null) { %>
                                                        SP chưa có ảnh đại diện
                                                        <% }else{ %>
                                                        <img class="" style="width:100px; height: 100px; margin: auto"
                                                            src="/<%= item.anhDaiDien %>">
                                                        <% } %></td>
                                                    <td><%= item.soLuongTon %></td>
                                                    <td><%= item.giaTienBan %></td>
                                                    <td>
                                                        <% if (item.trangThai == 1) { %>
                                                        Còn kinh doanh
                                                        <% } else{ %>
                                                        Ngừng kinh doanh
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <a href="/crawling/product-edit/<%= item._id %>"
                                                            class="btn btn-primary btn-block">
                                                            Edit
                                                        </a>
                                                        <a href="/crawling/product-delete/<%= item._id %>"
                                                            class="btn btn-primary btn-block">
                                                            Delete
                                                        </a></td>
                                                </tr>
                                                <% }} %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; @Eagle2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <%- include("scrolltotop") %>
    <!-- Scroll to Top Button-->

    <%- include("injectjs") %>
</body>

</html>