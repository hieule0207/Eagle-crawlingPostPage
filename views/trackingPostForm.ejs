<%- include("head") %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <%- include("sidebar") %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include("navbar") %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Post Reactions tracking</h1>
                                </div>
                                <form class="user" method="post" action="/crawling/tracking-post">
                                    <div class="form-group row">
                                        <!-- <div class="col-sm-3 mb-3 mb-sm-0">
                                            <select class=" form-control" name="platform">
                                                <option value="FB">FB</option>
                                                <option value="Instagram">Instagram</option>
                                            </select>
                                        </div> -->
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" id="" placeholder="Post's url"
                                                name="url">
                                        </div>
                                        <div class="col-sm-3">
                                            <button type="submit" class="btn btn-primary btn-block">
                                                Track
                                            </button>
                                        </div>
                                    </div>
                                </form>
                                <hr>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="container-fluid">
                            <h1 class="h3 mb-2 text-gray-800">Result</h1>
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Data report</h6>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Url</th>
                                                    <th>Name</th>
                                                    <th>ReactCount</th>
                                                    <th>ReleaseDate</th>
                                                    <th>Data retrieval date</th>
                                                </tr>
                                            </thead>
                                            <!-- <tfoot>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Position</th>
                                                    <th>Office</th>
                                                    <th>Age</th>
                                                    <th>Start date</th>
                                                    <th>Salary</th>
                                                </tr>
                                            </tfoot> -->
                                            <tbody>   
                                                <% if (data) {  %>   
                                                <% for ( let item of data ) { %>                                           
                                                <tr>
                                                    <td><%= item.url %></td>
                                                    <td><%= item.name %></td>
                                                    <td><%= item.reactCount %></td>
                                                    <td><%= item.releaseDate %></td>
                                                    <td><%= item.createdAt %></td>
                                                </tr>
                                                <% } %>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; @Eagle2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <%- include("scrolltotop") %>
    <!-- Scroll to Top Button-->

    <%- include("injectjs") %>
</body>

</html>